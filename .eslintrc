{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise",
    "chai-friendly"
  ],
  "env": {
    "browser" : true,
    "jest": true,
    "mocha": true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : "off",
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 80, 2],
    "object-curly-spacing" : [2, "always"],
    "comma-dangle"         : "off",
    "semi"                 : [2, "always"]
  }
}
